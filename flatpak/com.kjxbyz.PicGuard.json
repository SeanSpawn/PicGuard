{
  "app-id": "com.kjxbyz.PicGuard",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "picguard",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--device=all",
    "--filesystem=xdg-download",
    "--filesystem=xdg-pictures",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libjsoncpp",
      "only_arches": [
        "x86_64"
      ],
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release",
        "--default-library=shared"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.5.tar.gz",
          "sha256": "f409856e5920c18d0c2fb85276e24ee607d2a09b5e7d5f0a371368903c275da2"
        }
      ]
    },
    {
      "name": "olm",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.matrix.org/matrix-org/olm.git",
          "tag": "3.2.14"
        }
      ]
    },
    {
      "name": "libsecret",
      "buildsystem": "meson",
      "config-opts": [
        "-Dvapi=false",
        "-Dgtk_doc=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libsecret.git",
          "tag": "0.20.5"
        }
      ]
    },
    {
      "name": "picguard",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64",
        "aarch64"
      ],
      "build-commands": [
        "ls picguard",
        "cp -r picguard /app/picguard",
        "chmod +x /app/picguard/picguard",
        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "install -Dm644 com.kjxbyz.PicGuard.png /app/share/icons/hicolor/scalable/apps/com.kjxbyz.PicGuard.png",
        "mkdir -p /app/bin",
        "ln -s /usr/lib/x86_64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so",
        "if [ ! -e '/app/lib/libsqlite3.so' ]; then ln -s -f /usr/lib/aarch64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so; fi",
        "ln -s /app/picguard/picguard /app/bin/picguard",
        "install -Dm644 com.kjxbyz.PicGuard.desktop /app/share/applications/com.kjxbyz.PicGuard.desktop",
        "install -Dm644 com.kjxbyz.PicGuard.appdata.xml /app/share/appdata/com.kjxbyz.PicGuard.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://github.com/picguard/picguard/releases/download/v1.0.0+392/picguard_1.0.0+392_linux_amd64.tar.gz",
          "dest": "picguard",
          "sha256": "a478970e6f1c8c61578e9841a72cf0c99e5abd214c4a9708a55141a487ea327a",
          "x-checker-data": {
            "type": "json",
            "url": "https://api.github.com/repos/picguard/picguard/releases/latest",
            "version-query": ".tag_name | sub(\"v\";\"\")",
            "url-query": ".assets[] | select(.name==\"picguard_\" + $version + \"_linux_amd64.tar.gz\") | .browser_download_url"
          }
        },
        {
          "type": "archive",
          "only-arches": [
            "aarch64"
          ],
          "url": "https://github.com/picguard/picguard/releases/download/v1.0.0+392/picguard_1.0.0+392_linux_aarch64.tar.gz",
          "dest": "picguard",
          "sha256": "6a2a936d3440a43b59c16908bc0cbee539bc79a46d9f7f49be418087b8b1f19b",
          "x-checker-data": {
            "type": "json",
            "url": "https://api.github.com/repos/picguard/picguard/releases/latest",
            "version-query": ".tag_name | sub(\"v\";\"\")",
            "url-query": ".assets[] | select(.name==\"picguard_\" + $version + \"_linux_aarch64.tar.gz\") | .browser_download_url"
          }
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/picguard/picguard/v1.0.0+392/linux/shared/com.kjxbyz.PicGuard.desktop",
          "dest-filename": "com.kjxbyz.PicGuard.desktop",
          "sha256": "8e13c1b75103f39a3f57f72c36537e18e01cfdaf50ba888c5524717cc3fefd12"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/picguard/picguard/v1.0.0+392/linux/shared/com.kjxbyz.PicGuard.appdata.xml",
          "dest-filename": "com.kjxbyz.PicGuard.appdata.xml",
          "sha256": "f9b37ce592a9942c28b73ad2b2e68df0cb190e9817b69cb587e5f9b158506992"
        },
        {
          "type": "file",
          "path": "com.kjxbyz.PicGuard.png"
        }
      ]
    }
  ]
}
